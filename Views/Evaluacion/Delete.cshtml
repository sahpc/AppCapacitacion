@model AppCapacitacion.Models.Evaluacion

@{
    ViewData["Title"] = "Eliminar Evaluación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Evaluación</h1>
<hr />
<h4>¿Estás seguro que deseas eliminar esta evaluación?</h4>

<dl class="row">
    <dt class="col-sm-3">Empleado</dt>
    <dd class="col-sm-9">@Model.Empleado?.Nombre</dd>

    <dt class="col-sm-3">Capacitación</dt>
    <dd class="col-sm-9">@Model.Capacitacion?.Nombre</dd>

    <dt class="col-sm-3">Calificación</dt>
    <dd class="col-sm-9">@Model.Calificacion</dd>

    <dt class="col-sm-3">Comentario</dt>
    <dd class="col-sm-9">@Model.Comentario</dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
