@model IEnumerable<AppCapacitacion.Models.Evaluacion>

@{
    ViewData["Title"] = "Evaluaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Evaluaciones</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nueva Evaluación</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Empleado</th>
            <th>Capacitación</th>
            <th>Calificación</th>
            <th>Comentario</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Empleado?.Nombre</td>
                <td>@item.Capacitacion?.Nombre</td>
                <td>@item.Calificacion</td>
                <td>@item.Comentario</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
